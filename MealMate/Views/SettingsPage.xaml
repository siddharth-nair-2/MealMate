<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MealMate.Views.SettingsPage">
    <ContentPage.Content>
        <StackLayout>
            <Button Text="Manage Categories" x:Name="ButtonCategories" Clicked="ButtonCategories_Clicked" />
            <Button Text="Manage Food Items" x:Name="ButtonFoodItem" Clicked="ButtonFoodItem_Clicked" />
            <Button Text="Manage Cart" x:Name="ButtonCart" Clicked="ButtonCart_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>